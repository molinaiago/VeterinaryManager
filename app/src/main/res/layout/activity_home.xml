<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/denim"
    tools:context=".view.home"
    android:orientation="vertical"
    android:gravity="center"
    >

    <View
        android:id="@+id/containerTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_view_top"
        android:layout_marginTop="-40dp"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logoappinside"
        android:layout_gravity="center"
        android:layout_marginTop="-220dp"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-vindo, Iago"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="-25dp"
        />

    <TextView
        android:id="@+id/allServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLICITAÇÃO DE CASTRAÇÃO:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/firstInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cães e Gatos"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_edittext"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/secondInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="De qualquer sexo"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_edittext"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:layout_marginTop="9dp"
        />
    <TextView
        android:id="@+id/thirdInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sem raça definida"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_edittext"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:layout_marginTop="9dp"
        />
    <TextView
        android:id="@+id/fourthInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qualquer idade"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_edittext"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:layout_marginTop="9dp"
        />
    <TextView
        android:id="@+id/fithInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Residentes de Santiago/RS"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_edittext"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:layout_marginTop="9dp"
        />


    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMAÇÕES"
        android:textSize="17sp"
        android:textStyle="bold"
        android:backgroundTint="@color/midnightblue"
        android:padding="15dp"
        android:drawableEnd="@drawable/baseline_info_24"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_gravity="center"
        android:onClick="openDialog"
        />

    <Button
        android:id="@+id/scheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGENDAR CASTRAÇÃO"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/midnightblue"
        android:padding="15dp"
        android:drawableEnd="@drawable/baseline_check_24"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        />

</LinearLayout>
</ScrollView>