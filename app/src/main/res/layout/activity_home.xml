<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/denim"
        tools:context=".view.home"
        android:orientation="vertical"
        android:gravity="center"
        >

        <View
            android:id="@+id/containerTop"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-150dp"
            android:background="@drawable/background_view_top" />


        <ImageView
            android:layout_width="307dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:layout_marginTop="-380dp"
            android:src="@drawable/logoappinside" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="-15dp"
            android:gravity="center"
            android:text="Bem-vindo, Iago"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMAÇÕES"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/midnightblue"
            android:padding="15dp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/baseline_info_24"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:onClick="openDialog"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/mySchedulings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MINHA AGENDA"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/midnightblue"
            android:padding="15dp"
            android:drawableEnd="@drawable/baseline_view_agenda_24"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/midnightblue"
            android:drawableEnd="@drawable/baseline_check_24"
            android:padding="15dp"
            android:text="AGENDAR CASTRAÇÃO"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>